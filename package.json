{
  "name": "readium-ng",
  "version": "0.0.1",
  "description": "Readium Next Generation",
  "main": "dist/readium-ng.js",
  "module": "dist/readium-ng.js",
  "types": "dist/readium-ng.d.ts",
  "scripts": {
    "build": "npm-run-all --serial build:**",
    "build:scripts": "tsc",
    "build:bundle": "rollup -c",
    "test": "npm-run-all --serial test:build:** && npm run test:start",
    "test:build:scripts": "tsc --p tsconfig-test.json",
    "test:build:bundle": "webpack --config webpack-test.config.js",
    "test:start": "karma start karma.config.js",
    "test:debug": "npm run test:start -- --singleRun=false",
    "test:watch": "echo \"not implemented\"",
    "lint": "tslint --project tsconfig-common.json -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "watch": "npm-run-all --parallel watch:**",
    "watch:scripts": "tsc -w",
    "watch:bundle": "rollup -c -w"
  },
  "keywords": [
    "Readium"
  ],
  "author": "EvidentPoint Software",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.1",
    "@types/jquery": "^3.2.18",
    "@types/mocha": "^2.2.46",
    "@types/node": "^9.3.0",
    "ava": "^0.24.0",
    "chai": "^4.1.2",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^5.0.0",
    "rollup": "^0.55.3",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-microsoft-contrib": "^5.0.2",
    "typescript": "^2.7.1",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "jquery": "^3.2.1",
    "ta-json": "^2.3.1",
    "readium-shared-js": "latest"
  }
}
