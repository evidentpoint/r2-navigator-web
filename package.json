{
  "name": "readium-ng",
  "version": "0.0.1",
  "description": "Readium Next Generation",
  "main": "./dist/readium-ng.umd.js",
  "module": "./dist/readium-ng.esm.js",
  "types": "./dist/readium-ng.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c",
    "test": "npm run test:build && npm run test:start",
    "test:clean": "rimraf test/dist",
    "test:build": "npm run test:clean && cd test && webpack",
    "test:start": "cd test && karma start karma.config.js",
    "test:debug": "npm run test:start -- --singleRun=false",
    "test:watch": "echo \"not implemented\"",
    "lint": "tslint --project tsconfig-common.json -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "watch": "npm-run-all --parallel watch:**",
    "watch:scripts": "tsc -w",
    "watch:bundle": "npm run build -- -w"
  },
  "keywords": [
    "Readium"
  ],
  "author": "EvidentPoint Software",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.2",
    "chai": "^4.1.2",
    "dts-bundle": "^0.7.3",
    "glob": "^7.1.2",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.55.3",
    "rollup-plugin-execute": "^1.0.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-typescript2": "^0.11.0",
    "source-map-loader": "^0.2.3",
    "ts-loader": "^3.5.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-microsoft-contrib": "^5.0.2",
    "typescript": "^2.7.1",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "readium-shared-js": "latest",
    "ta-json": "^2.3.1"
  }
}
