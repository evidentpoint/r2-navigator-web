{
  "compilerOptions": {
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "outDir": "./dist/"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}